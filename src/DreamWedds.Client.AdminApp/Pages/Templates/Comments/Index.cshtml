@page
@model DreamWedds.Client.AdminApp.Pages.Templates.Comments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TemplateComments[0].Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemplateComments[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemplateComments[0].IsHtml)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemplateComments[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemplateComments[0].IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TemplateComments[0].Template)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TemplateComments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHtml)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Template.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
