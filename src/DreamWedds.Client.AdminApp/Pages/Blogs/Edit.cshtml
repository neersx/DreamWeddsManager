                <label asp-for="Blog.CreatedOn" class="control-label"></label>
                <input asp-for="Blog.CreatedOn" class="form-control" />
                <span asp-validation-for="Blog.CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.LastModifiedBy" class="control-label"></label>
                <input asp-for="Blog.LastModifiedBy" class="form-control" />
                <span asp-validation-for="Blog.LastModifiedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.LastModifiedOn" class="control-label"></label>
                <input asp-for="Blog.LastModifiedOn" class="form-control" />
                <span asp-validation-for="Blog.LastModifiedOn" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Blog.IsDeleted" /> @Html.DisplayNameFor(model => model.Blog.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
